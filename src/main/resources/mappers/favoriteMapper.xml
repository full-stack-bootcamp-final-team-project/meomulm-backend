<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meomulm.favorite.model.mapper.FavoriteMapper">

    <select id="selectFavorites" resultType="SelectFavorite">
        SELECT
            f.*,
            a.accommodation_name,
            a.accommodation_address,
            ai.accommodation_image_url
        FROM favorite f
                 INNER JOIN accommodation a
                            ON f.accommodation_id = a.accommodation_id
                 INNER JOIN accommodation_image ai
                            ON a.accommodation_id = ai.accommodation_id
                            AND ai.accommodation_image_id = 1
        WHERE f.user_id = #{userId}
    </select>


    <insert id="insertFavorite" parameterType="Favorite" useGeneratedKeys="true" keyProperty="favoriteId" keyColumn="favorite_id">
        INSERT INTO favorite (user_id, accommodation_id)
        VALUES (#{userId}, #{accommodationId})
    </insert>

    <delete id="deleteFavorite" parameterType="Favorite">
        DELETE FROM favorite
        WHERE user_id = #{userId} AND favorite_id = #{favoriteId}
    </delete>


